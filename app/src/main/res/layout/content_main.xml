<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="hackathon.sg.potf.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo" />

    <TextView
        android:id="@+id/textViewName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />

    <TextView
        android:id="@+id/textViewBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="Start Shopping!" />

    <LinearLayout
        android:id="@+id/functionLayout"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_below="@+id/userProfile"
        android:layout_marginTop="10dp"
        android:baselineAligned="false"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/imageButtonTopUp"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    android:background="@color/zxing_transparent"
                    android:contentDescription="Top Up Wallet"
                    android:src="@drawable/ic_account_balance_wallet_black_24dp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="19dp"
                    android:text="Top Up Wallet"
                    android:textStyle="bold"
                    tools:layout_editor_absoluteX="55dp" />
            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">

            <ImageButton
                android:id="@+id/imageButtonHistory"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/zxing_transparent"
                android:contentDescription="Rental History"
                android:src="@drawable/ic_history_black_24dp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:text="Rental History"
                android:textStyle="bold"
                tools:layout_editor_absoluteX="55dp" />
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:gravity="center"
            android:orientation="vertical"
            android:background="@color/tw__light_gray">

            <ImageButton
                android:id="@+id/imageButtonQR"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/zxing_transparent"
                android:contentDescription="Scan Pod's QR"
                android:src="@drawable/ic_camera_enhance_black_24dp" />

            <TextView
                android:id="@+id/textView10"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:text="Scan Pod's QR"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>
